{% extends 'base.html.twig' %}
{% block body %}

{{ form_start(form) }}

<div class="d-flex justify-content-center align-items-center h-100">
	<div class="col-lg-8">
		<div class="card mb-4">
			<div class="card-body gradient-custom rounded-6">
				<div class="row">
					<div class="col-sm-3">
						<p class="mb-0">Name</p>
					</div>
					<div class="col-sm-9">
						{{ form_widget(form.username) }}
					</div>
				</div>
				<hr>
				<div class="row">
					<div class="col-sm-3">
						<p class="mb-0">Email</p>
					</div>
					<div class="col-sm-9">
						{{ form_widget(form.email, {'label': 'Email'}) }}
					</div>
				</div>
				<hr>
				<div class="row">
					<div class="col-sm-3">
						<p class="mb-0">Birthdate</p>
					</div>
					<div class="col-sm-9">
						{{ form_widget(form.birthday, {'label': 'Birthday'}) }}
					</div>
				</div>
				<hr>
				<div class="row">
					<div class="col-sm-3">
						<p class="mb-0">Profile picture</p>
					</div>
					<div class="col-sm-9">
						{{ form_widget(form.imageFile, {
                    'attr': {'class': 'form-control', 'accept': 'image/*'}}) }}
					</div>
				</div>
				<hr>
				<div class="d-flex justify-content-center">
					<button class="btn btn-custom-profile">{{ button_label|default('Save') }}</button>
				</div>
				<hr>
				<a class="d-flex justify-content-center" href="{{ path('app_profile_my') }}">Back to profile</a>
			</div>
	</div>
</div>
{{ form_end(form) }}

{% endblock %}
